<div class="edit-section">
  <div class="attachment">
    <%= render partial: "attachments/form", locals: {tag: tag, attachment: attachment} %>
  </div>
  <div class="expand-btn">
    <%= link_to t(".attachment_list"), "#attachments", "data-toggle": :collapse, role: :button, "aria-expanded": false %>
    <div class="float-right">
      (<span id="attachments-tag-<%= tag.id %>"><%= tag.attachments.size %></span>)
    </div>
  </div>
  <div class="collapse" id="attachments">
    <div class="card card-body" id="attachment-list">
      <%= render partial: "attachments/attachment", collection: tag.attachments.order_by_created_at %>
    </div>
  </div>
</div>
