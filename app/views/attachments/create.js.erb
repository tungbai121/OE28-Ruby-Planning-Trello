<% if @attachment.errors.blank? %>
  $('#attachments').addClass('show');
  $('<%= j render "attachments/attachment", attachment: @attachment %>').prependTo('#attachment-list');
  $('#attachments-card-<%= @card.id %>').text('<%= @card.attachments.size %>');
<% end %>
$('.attachment').html('<%= j render partial: "attachments/form", locals: {card: @card, attachment: @attachment} %>');
$('#toastr').html('<%= j render "shared/toastr" %>');
