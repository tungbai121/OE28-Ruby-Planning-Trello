<% if @card.errors.present? %>
  $('#toastr').html('<%= j render "shared/toastr" %>');
<% else %>
  $('#deadline-status').text('(<%= deadline_status @card %>)');
  $('#deadline-status')[0].className = '<%= deadline_status @card %>';
  $('#deadline-card-<%= @card.id %>').html('<%= j render "deadlines/short_deadline", card: @card %>');
<% end %>
