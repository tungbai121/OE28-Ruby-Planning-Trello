<%= form_for list, url: lists_path, remote: true do |f| %>
  <%= hidden_field_tag :board_id, @board.id %>
  <%= f.text_field :name, class: "form-control", placeholder: t(".enter_list_title") %>
  <%= display_error f.object, :name , t(".name") %>
  <%= f.submit t(".add_list"), class: "btn btn-success" %>
<% end %>
