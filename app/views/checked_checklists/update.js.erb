<% if @checklist.errors.present? %>
  $('#toastr').html('<%= j render "shared/toastr" %>');
<% else %>
  $('.progress-bar').css('width', '<%= progress @card.checklists %>');
  $('.progress-bar').text('<%= progress @card.checklists %>');
  $('.checklist-card-<%= @card.id %>').html('<%= j render "checklists/statistic", card: @card %>');
<% end %>
